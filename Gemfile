  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  # gem "jemoji" # due to https://github.com/jekyll/jekyll/issues/9733, disable it
  gem "jekyll-include-cache"
  gem "jekyll-algolia"
  gem "jektex"
  gem "jekyll-gfm-admonitions"
end

gem "webrick", "~> 1.8"
